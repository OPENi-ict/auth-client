		<!-- OPENi -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> OpenID Local OPENi</h3>

				<% if (user.openidlocalopeni.token) { %>
					<p>
						<strong>id</strong>: <%= user.openidlocalopeni.id %><br>
						<strong>token</strong>: <%= user.openidlocalopeni.token %><br>
						<strong>email</strong>: <%= user.openidlocalopeni.email %><br>
						<strong>name</strong>: <%= user.openidlocalopeni.name %>
					</p>

					<a href="/unlink/google" class="btn btn-default">Unlink</a>
				<% } else { %>
					<a href="/connect/google" class="btn btn-default">Connect OPENI</a>
				<% } %>

			</div>
		</div>

